@model ResumeClient.Models.MainSkill

<div class="row">
    <h4 class="text-center mt-3">MainSkill</h4>
    <form asp-action="AddMainSkill">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="BackgroundColor" class="control-label"></label>
            <input asp-for="BackgroundColor" type="color" class="form-control" value="#FFFFFF" />
            <span asp-validation-for="BackgroundColor" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Color" class="control-label"></label>
            <input asp-for="Color" type="color" class="form-control" />
            <span asp-validation-for="Color" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="UserId" hidden class="form-control" value="@Model.UserId"/>
        </div>
        <div class="form-group mt-3 mb-3 form-buttons">           
            <input type="submit" value="Create" class="btn btn-primary" />
            <input type="button" value="Exit" class="btn exit-btn close-popup" />
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
